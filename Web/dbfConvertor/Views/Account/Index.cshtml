@model Dictionary<string, object>

<div class="bg-primary panel-body" style="max-height: 3em; padding-top: 0.25em">
    <h4 class="text-justify">Detalii User</h4>
</div>

<table class="table table-condensed table-bordered">
    @if (Model.Count > 0)
    {
        foreach (var detail in Model)
        {
            <tr>
                <th>@detail.Key</th>
                <td>@detail.Value</td>
            </tr>
        }
    }
</table>

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <a class="btn btn-primary btn-sm" asp-controller="SuperAdmin" asp-action="Index">
        Modificare detalii user
    </a>
    <a class="btn btn-primary btn-sm" asp-controller="Role" asp-action="AccessDenied">
        Rapoarte
    </a>
    <a class="btn btn-primary btn-sm" asp-controller="Role" asp-action="Index">
        Management de Roluri
    </a>
    <a class="btn btn-primary btn-sm" asp-controller="SuperAdmin" asp-action="Index">
        Management Useri
    </a>
    <a class="btn btn-primary btn-sm pull-right" asp-controller="UserAccount" asp-action="Logout">
        Logout
    </a>
}

<br/><br/>

<div class="bg-primary panel-body" style="max-height: 3em; padding-top: 0.25em">
    <h4>Authorization</h4>
</div>

<table class="table table-condensed table-bordered table-striped">
    <tr>
        <th>Type</th>
        <th>Requirements</th>
        <th></th>
    </tr>
    <tr>
        <td>Role-Staff </td>
        <td>Management rapoarte</td>
        <td>
            <a class="btn btn-primary btn-xs" asp-controller="Role" asp-action="AccessDenied">Management rapoarte</a>
        </td>
    </tr>
    <tr>
        <td>Role - SuperAdmins</td>
        <td>Drepturi de upload fisiere excel</td>
        <td>
            <a class="btn btn-primary btn-xs" asp-controller="Role" asp-action="AccessDenied">Drepturi de upload</a>
        </td>
    </tr>
    <tr>
        <td>Role-SuperAdmins</td>
        <td>Numar de fisiere incarcate: 100</td>
        <td>
            <a class="btn btn-primary btn-xs" asp-controller="Role" asp-action="AccessDenied">
                Setare numar fisiere
            </a>
        </td>
    </tr>
    <tr>
        <td>Role - Customer</td>
        <td>Vizualizare fisiere *.dbf</td>
        <td>
            <a class="btn btn-primary btn-xs" asp-controller="Role" asp-action="AccessDenied">Vizualizare fisiere</a>
        </td>
    </tr>
    <tr>
        <td>Role - SuperAdmin</td>
        <td>Management de useri si roluri.</td>
        <td>
            <a class="btn btn-primary btn-xs" asp-controller="Role" asp-action="AccessDenied">
                Management de securitate
            </a>
        </td>
    </tr>

</table>